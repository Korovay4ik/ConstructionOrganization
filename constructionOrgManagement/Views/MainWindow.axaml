			   PanePlacement="Left" 
			   OpenPaneLength="200" 
			   CompactPaneLength="50">
		<SplitView.Pane>
			<StackPanel>
				<TextBlock HorizontalAlignment="Center" Margin="{StaticResource defaultMargin}">–ú–µ–Ω—é</TextBlock>
				<Button HorizontalAlignment="Stretch" Margin="{StaticResource defaultMargin}">–ò–Ω—Ñ–æ—Ä–º–∞—Ü–∏—è</Button>
				<Button HorizontalAlignment="Stretch" Margin="{StaticResource defaultMargin}">–ó–∞–ø—Ä–æ—Å—ã</Button>
				<Button HorizontalAlignment="Stretch" Margin="{StaticResource defaultMargin}" Command="{Binding SwitchContent}" CommandParameter="{x:Type vm:DataManipulationViewModel}">–ü—Ä–æ—Å–º–æ—Ç—Ä –∑–∞–ø–∏—Å–µ–π</Button>
			    <ToggleButton Name="btnOpenMenu" HorizontalAlignment="Right" Margin="{StaticResource defaultMargin}">
					<ToggleButton.Styles>
						<Style Selector="ToggleButton[IsChecked=true] /template/ ContentPresenter">
							<Setter Property="Content" Value="&lt;"/>
						</Style>
						<Style Selector="ToggleButton[IsChecked=false] /template/ ContentPresenter">
							<Setter Property="Content" Value="&gt;"/>
						</Style>
					</ToggleButton.Styles>
				</ToggleButton>

